<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách người dùng</title>
    <!-- Liên kết CSS của Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <!-- Liên kết tới file CSS của bạn -->
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>

<%- include('header') %> <!-- Bao gồm phần header -->

<div class="container mt-5"> <!-- Thêm margin-top cho container -->
    <h1>Danh sách người dùng</h1>

    <% if (message) { %>
        <div class="alert alert-success" role="alert">
            <%= message %>
        </div>
    <% } %>

    <a href="/users/add" class="btn btn-primary mb-3">Thêm người dùng mới</a> <!-- Thêm margin-bottom cho nút -->
    
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Địa chỉ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <% if (users.length === 0) { %>
                <tr>
                    <td colspan="6" class="text-center">Không có người dùng nào để hiển thị.</td>
                </tr>
            <% } else { %>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.username %></td>
                        <td><%= user.fullname %></td>
                        <td><%= user.sex %></td>
                        <td><%= user.address %></td>
                        <td>
                            <a href="/users/<%= user.id %>" class="btn btn-info">Xem</a>
                            <a href="/users/edit/<%= user.id %>" class="btn btn-warning">Sửa</a>
                            <a href="/users/delete/<%= user.id %>" class="btn btn-danger">Xóa</a>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>

<%- include('footer') %> <!-- Bao gồm phần footer -->

<!-- Liên kết JavaScript của Bootstrap 5 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
